generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"  
  url      = "file:./dev.db"
}

model Catalog {
  id        Int       @id @default(autoincrement())
  name      String
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Product {
  id         Int      @id @default(autoincrement())
  name       String
  price      Float
  catalogId  Int?
  catalog    Catalog? @relation(fields: [catalogId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
